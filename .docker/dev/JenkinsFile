pipeline {
    agent any
    parameters {

    }

    stages {
        stage('Cleanup') {
            steps {
                echo 'Cleaning up..'
            }
        }
        stage('Checkout') {
            steps {
                script {
                    echo 'Checking out..'
                }
                dir('Server') {
                    git(
                        url: 'https://github.com/Innovate-Future-Foundation/Server.git',
                        branch: 'devops-mark-ma'
                    )
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo 'Building..'
                    // build with command `dotnet build "InnovateFuture.Api.csproj" -c Release -o /app/build`
                    sh 'dotnet build "InnovateFuture.Api.csproj" -c Release -o /app/build'
                    // build with command `dotnet publish "InnovateFuture.Api.csproj" -c Release -o /app/publish`
                    sh 'dotnet publish "InnovateFuture.Api.csproj" -c Release -o /app/publish'
                    // build entity framework
                    sh 'dotnet ef database update --project "./src/InnovateFuture.Infrastructure/InnovateFuture.Infrastructure.csproj" --startup-project "./src/InnovateFuture.Api/InnovateFuture.Api.csproj"'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}